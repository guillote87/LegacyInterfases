<mvc:View controllerName="legacy.controller.MainView"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:chart="sap.suite.ui.microchart"
	xmlns:l="sap.ui.layout">
	<Page id="page" title="{i18n>title}">
		<VBox class="sapUiResponsiveMargin" alignContent="Center">
			<l:HorizontalLayout id="TileContainerExpanded" allowWrapping="true" content="{path :'/tiles' ,factory :'.createTiles'}" class="sapUiResponsiveMargin">
			</l:HorizontalLayout>
		</VBox>
		<VBox class="sapUiResponsiveMargin" alignContent="Center">
			<OverflowToolbar id="search" style="Clear" visible="false">
				<SearchField id="searchFilter" placeholder="Buscar Org. Venta" search="searchFilter" width="15rem"/>
				<DateRangeSelection id="fecha" width="13rem" valueFormat="YYYYMMdd" displayFormat="dd.MM.yyyy"
			change="searchFilter"/>
			</OverflowToolbar>
	
			<Table id="interfaseTable" items="{FilteredErrors>/}" visible="false" growing="true"  growingThreshold="10">
				<columns>
					<Column >
						<Text text="OrgVentas"/>
					</Column>
					<Column >
						<Text text="Fecha" />
					</Column>
					<Column >
						<Text text="Hora" />
					</Column>
					<Column >
						<Text text="Operacion" />
					</Column>
					<Column >
						<Text text="Mensaje"/>
					</Column>
						<Column >
						<Text text="PedidoSAP"/>
					</Column>
					<Column >
						<Text text="ClienteSap"/>
					</Column>
						<Column >
						<Text text="PedidoPortal"/>
					</Column>
						<Column >
						<Text text="IdSite"/>
					</Column>
					
					<Column >
						<Text text="Oportunidad"/>
					</Column>
									</columns>
				<items>
					<ColumnListItem vAlign="Middle" type="Navigation" press=".onPress">
						<cells>
							<Text text="{FilteredErrors>OrgVentas}"/>
							<Text text="{FilteredErrors>Fecha}"/>
							<Text text="{FilteredErrors>Hora}"/>
							<Text text="{FilteredErrors>Operacion}"/>
							<Text text="{FilteredErrors>Mensaje}"/>
							<Text text="{FilteredErrors>PedidoSAP}"/>
							<Text text="{FilteredErrors>ClienteSAP}"/>
							<Text text="{FilteredErrors>PedidoPortal}"/>
							<Text text="{FilteredErrors>IdSite}"/>
							<Text text="{FilteredErrors>Oportunidad}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</VBox>
<VBox class="sapUiResponsiveMargin" alignContent="Center">
		
			<Table id="interfasesFull" items="{interfases>/}" visible="true" growing="true" growingThreshold="10">
				<columns>
					<Column >
						<Text text="Interface" />
					</Column>
					<Column >
						<Text text="Fecha" />
					</Column>
					<Column >
						<Text text="OrgVentas"/>
					</Column>
					<Column >
						<Text text="Usuario"/>
					</Column>
					<Column >
						<Text text="ClienteSap"/>
					</Column>
					<Column >
						<Text text="Mensaje"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<Text text="{interfases>Interface}"/>
							<Text text="{interfases>Fecha}"/>
							<Text text="{interfases>OrgVentas}"/>
							<Text text="{interfases>Usuario}"/>
							<Text text="{interfases>ClienteSAP}"/>
							<Text text="{interfases>Mensaje}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</VBox>
	</Page>
</mvc:View>