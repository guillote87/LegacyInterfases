<mvc:View controllerName="legacy.controller.MainView"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:chart="sap.suite.ui.microchart"
	xmlns:l="sap.ui.layout">
	<Page id="page" title="{i18n>title}">
		<VBox class="sapUiResponsiveMargin" alignContent="Center">
			<l:HorizontalLayout id="TileContainerExpanded" allowWrapping="true" content="{/tiles}" class="sapUiResponsiveMargin">
				<GenericTile header="{title}" subheader="{subtitle}" frameType="OneByHalf" press="pressTile" class="sapUiTinyMargin" sizeBehavior="Small">
					<TileContent unit="{unit}" footer="{footer}">
						<NumericContent class="font" withMargin="false" value="{kpivalue}" valueColor="{color}" />
					</TileContent>
				</GenericTile>
			</l:HorizontalLayout>
		</VBox>
		<VBox class="sapUiResponsiveMargin" alignContent="Center">
			<OverflowToolbar id="search" style="Clear" visible="false">
				<SearchField id="searchFilter" placeholder="Buscar Org. Venta" search="searchFilter" width="15rem"/>
				<DateRangeSelection id="fecha" width="15rem" valueFormat="dd.MM.yyyy" displayFormat="dd.MM.yyyy"
			change="searchFilter"/>
			</OverflowToolbar>

			<Table id="interfaseTable" items="{FilteredErrors>/}" visible="false">
				<columns>
					<Column >
						<Text text="Interfase" />
					</Column>
					<Column >
						<Text text="Fecha" />
					</Column>
					<Column >
						<Text text="OrgVentas"/>
					</Column>
					<Column >
						<Text text="Usuario"/>
					</Column>
					<Column >
						<Text text="ClienteSap"/>
					</Column>
					<Column >
						<Text text="Mensaje"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<Text text="{FilteredErrors>Interfase}"/>
							<Text text="{FilteredErrors>Fecha}"/>
							<Text text="{FilteredErrors>OrgVentas}"/>
							<Text text="{FilteredErrors>Usuario}"/>
							<Text text="{FilteredErrors>ClienteSap}"/>
							<Text text="{FilteredErrors>Mensaje}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</VBox>
	</Page>
</mvc:View>
