<mvc:View controllerName="legacy.controller.MainView"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:chart="sap.suite.ui.microchart"
	xmlns:l="sap.ui.layout">
	<Page id="page" title="{i18n>title}">
		<VBox class="sapUiResponsiveMargin" alignContent="Center">
			<l:HorizontalLayout id="TileContainerExpanded" allowWrapping="true" content="{/tiles}" class="sapUiResponsiveMargin">
				<GenericTile header="{title}" subheader="{subtitle}" press="press" class="sapUiTinyMargin" sizeBehavior="Small">
					<TileContent unit="{unit}" footer="{footer}">
						<NumericContent withMargin="false" value="{kpivalue}" valueColor="{color}" />
					</TileContent>
				</GenericTile>
			</l:HorizontalLayout>
		</VBox>
		<VBox class="sapUiResponsiveMargin" alignContent="Center">
		<Table id="interfaseTable" items="{Errors>/}">
			<columns>
				<Column >
					<Text text="Fecha" />
				</Column>
				<Column >
					<Text text="OrgVentas"/>
				</Column>
				<Column >
					<Text text="Usuario"/>
				</Column>
				<Column >
					<Text text="ClienteSap"/>
				</Column>
				<Column >
					<Text text="Mensaje"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle">
					<cells>
						<Text text="{Errors>Fecha}"/>
						<Text text="{Errors>OrgVentas}"/>
						<Text text="{Errors>Usuario}"/>
						<Text text="{Errors>ClienteSap}"/>
						<Text text="{Errors>Mensaje}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		</VBox>
	</Page>
</mvc:View>
